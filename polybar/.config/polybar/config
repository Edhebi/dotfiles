[theme]
include-file = $HOME/.config/polybar/theme

[colors]
background = ${theme.background}
foreground = ${theme.foreground}
highlight  = ${theme.color6}
dim = ${theme.color8}

[bar/master]
monitor = eDP1
width = 100%
padding = 1
height = 24

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = icomoon_polybar:size=13;3
font-1 = Hack Nerd Font Mono:size=13;3

modules-left = bspwm
modules-center =
modules-right = day time volume wifi battery
module-margin = 1

locale = fr_FR.UTF-8
enable-ipc = true
cursor-click = pointer

[module/battery]
type = internal/battery
full-at = 98
poll-interval = 3

format-charging-prefix = " "
format-discharging-prefix = " "
format-full-prefix = " "

format-charging-prefix-foreground = ${colors.highlight}
format-discharging-prefix-foreground = ${colors.highlight}
format-full-prefix-foreground = ${colors.highlight}

[module/bspwm]
type = internal/bspwm
format = <label-state>
format-prefix = " "
format-prefix-foreground = ${colors.highlight}
label-focused-foreground = ${colors.highlight}
label-empty-foreground = ${colors.dim}
[module/day]
type = internal/date
format-prefix = " "
format-prefix-foreground = ${colors.highlight}
label = %date%
date = %d %B

[module/time]
type = internal/date
format-prefix = " "
format-prefix-foreground = ${colors.highlight}
label = %time%
time = %H:%M

[module/volume]
type = internal/alsa
master-soundcard = hw:0
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.highlight}

ramp-headphones-0 = 
ramp-headphones-1 = 
ramp-headphones-foreground = ${colors.highlight}

format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.highlight}
label-muted = muted

[module/wifi]
type = internal/network
interface = wlo1
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.highlight}
label-connected = %essid%
format-disconnected = offline
format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.highlight}

; vim:ft=dosini
