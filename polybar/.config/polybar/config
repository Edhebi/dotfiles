[colors]
background = ${xrdb:color0:#000}
foreground = ${xrdb:color7:#fff}
accent1 = ${xrdb:color1:#ff0}
accent2 = ${xrdb:color2:#0ff}
accent3 = ${xrdb:color3:#f0f}

[bar/master]
monitor = eDP1
override-redirect = true
width = 100%
padding = 1
height = 24
line-size = 2
line-color = ${colors.accent3}

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = icomoon:size=12
font-1 = Hack Nerd Font Mono:size=12;1
font-2 = Noto Sans CJK JP:size=10

modules-left = dwm-tags title
modules-center =
modules-right = day time volume wifi battery
module-margin = 1

locale = fr_FR.UTF-8
enable-ipc = true
cursor-click = pointer

[module/battery]
type = internal/battery
full-at = 98
poll-interval = 3
format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-full =  <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%
format-charging-underline = ${colors.accent1}
format-discharging-underline = ${colors.accent1}
format-full-underline = ${colors.accent1}

[module/day]
type = internal/date
format =  <label>
label = %date%
date = %d %B
format-underline = ${colors.accent1}

[module/dwm-tags]
type = custom/script
exec = cat <> /home/leo/.cache/dwm/tags
exec-if = [ -p /home/leo/.cache/dwm/tags ]
tail = true

[module/time]
type = internal/date
format =  <label>
label = %time%
time = %H:%M
format-underline = ${colors.accent2}

[module/title]
type = internal/xwindow
label-maxlen = 90

[module/volume]
type = internal/alsa
master-soundcard = hw:0
format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.accent1}
label-volume = %percentage%%
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
format-muted = 

[module/wifi]
type = internal/network
interface = wlo1
format-connected =  <label-connected>
label-connected = %essid%
format-disconnected = 
format-connected-underline = ${colors.accent2}
format-disconnected-underline = ${colors.accent2}

