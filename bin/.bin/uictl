#!/bin/zsh

CONFD="${XDG_CONFIG_HOME:-$HOME/.config}"

missing() {
  echo "invalid/missing command.\nvalid commands are: ${@}"
}

i3ctl() {
  for cmd in "$@"; case "$cmd" in
    build) "$CONFD/i3/build.sh" ;;
    reload) i3-msg reload ;;
    restart) i3-msg restart ;;
    exit) i3-msg exit ;;
    *) missing build reload restart exit ;;
  esac
}

case $1 in
  i3) i3ctl "${@:2}" ;;
  *) missing i3 ;;
esac
